{
  "name": "ai-spec-generator",
  "displayName": "AI Spec Generator",
  "description": "Generate specifications of your code using AI",
  "version": "1.0.2",
  "publisher": "yuji",
  "icon": "resources/ext-icon.png",
  "keywords": [
    "ai",
    "document",
    "copilot",
    "chatgpt",
    "llm",
    "automate",
    "仕様書",
    "生成"
  ],
  "repository": {
    "url": ""
  },
  "engines": {
    "vscode": "^1.99.3"
  },
  "categories": [
    "Other"
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "activationEvents": [],
  "homepage": "https://github.com/kayu-s",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-spec-generator.generateSpecifications",
        "title": "Generate specifications"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiSpecGenerator",
          "title": "AI Spec Generator",
          "icon": "resources/sidebar-icon.png"
        }
      ]
    },
    "views": {
      "aiSpecGenerator": [
        {
          "type": "webview",
          "id": "ai-spec-generator.promptView",
          "name": "Edit Default Prompt"
        }
      ]
    },
    "configuration": {
      "title": "AI Spec Generator",
      "properties": {
        "ai-spec-generator.targetExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "%targetExtensions-description%",
          "default": [
            "ts",
            "js"
          ],
          "scope": "machine-overridable"
        },
        "ai-spec-generator.inputDirs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "%inputDirs-description%",
          "default": [
            "src"
          ],
          "scope": "machine-overridable"
        },
        "ai-spec-generator.outputDir": {
          "type": "string",
          "description": "%outputDir-description%",
          "default": "docs",
          "scope": "machine-overridable"
        },
        "ai-spec-generator.prompt": {
          "type": "string",
          "description": "%prompt-description%",
          "default": "%prompt-default%",
          "scope": "machine-overridable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
